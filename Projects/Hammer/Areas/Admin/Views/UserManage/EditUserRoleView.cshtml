@model Entity.Entities.UserRoleEntity
@{
    ViewBag.Title = "EditUserRoleView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="pagetable">
    <tr>
        <td class="title">
            <span class="red">*</span>
            角色名称:
        </td>
        <td>
            <input col="RoleName" class="textbox" value="@Model.RoleName" type="text" validtype="required(角色名称)|maxLen(20)" />
        </td>
    </tr>
    <tr>
        <td class="title">操作</td>
        <td>
            <input type="hidden" col="ID" value="@Model.ID" />
            <input type="button" value="保存" onclick="Save()" />
        </td>
    </tr>
</table>
<script>
    function Save() {
        if (!$.validatebox.valid()) {
            return;
        }

        var param = $('.pagetable').GetPostData();

        $.U1Ajax('/admin/UserManage/EditUserRoleJson', param, function (result) {
            if (result.Tag > 0) {
                alert('保存成功! ');
                getCD().Reflesh();
                PW.closeWindow();
            } else {
                alert(result.Message);
            }
        }, false);
    }
</script>